{
	"name": "@brikcss/git-hooks",
	"version": "0.0.0-development",
	"description": "Useful git hooks to make developers' lives easier.",
	"keywords": [
		"git",
		"git hooks",
		"linter"
	],
	"author": "BrikCSS <https://github.com/brikcss>",
	"contributors": [
		"Zimmee <thezimmee@gmail.com>"
	],
	"homepage": "https://github.com/brikcss/git-hooks",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brikcss/git-hooks.git"
	},
	"bugs": {
		"url": "https://github.com/brikcss/git-hooks/issues"
	},
	"bin": {
		"pre-commit-lint": "./bin/pre-commit-lint.js",
		"pre-push-check-stage": "./bin/pre-push-check-stage.sh",
		"commit-msg-stamp-branch": "./bin/commit-msg-stamp-branch.sh"
	},
	"directories": {
		"bin": "./bin"
	},
	"publishConfig": {
		"tag": "dev",
		"access": "public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "node ./bin/pre-commit-lint.js",
			"commit-msg": "commitlint -e $HUSKY_GIT_PARAMS && . ./bin/commit-msg-stamp-branch.sh ${HUSKY_GIT_PARAMS}",
			"pre-push": ". ./bin/pre-push-check-stage.sh && echo \"\n[ok] Pushing code...\""
		}
	},
	"scripts": {
		"test": "eslint ./bin/**/*.js",
		"semantic-release": "semantic-release"
	},
	"dependencies": {
		"@brikcss/eslint-config": "^0.1.3",
		"eslint": "4.19.1",
		"fs-extra": "^5.0.0",
		"husky": "^1.0.0-rc.6",
		"loglevel": "^1.6.1",
		"minimist": "^1.2.0",
		"prettier": "1.12.1",
		"shelljs": "0.8.2",
		"stylelint": "9.2.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^6.2.0",
		"semantic-release": "^15.4.1"
	}
}
